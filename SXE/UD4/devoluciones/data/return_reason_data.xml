<odoo>
    <record id="return_reason_talla" model="return.reason">
        <field name="name">Talla incorrecta</field>
        <field name="description">El cliente recibió una talla diferente a la esperada.</field>
    </record>

    <record id="return_reason_defecto" model="return.reason">
        <field name="name">Producto defectuoso</field>
        <field name="description">El artículo presenta defectos o daños.</field>
    </record>

    <record id="return_reason_no_satisfecho" model="return.reason">
        <field name="name">No satisfecho con el producto</field>
        <field name="description">El cliente no está conforme con la calidad o diseño del producto.</field>
    </record>
</odoo>
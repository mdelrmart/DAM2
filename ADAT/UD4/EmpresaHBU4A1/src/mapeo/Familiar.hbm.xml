<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="pojos.Familiar" table="FAMILIAR">
    <!-- Id -->
    <composite-id name="id" class="pojos.FamiliarId">
      <key-property name="NSSempregado" type="string">
        <column name="NSS_Empregado" not-null="true"/>
      </key-property>

      <key-property name="numero" type="int">
        <column name="Numero" not-null="true"/>
      </key-property>
    </composite-id>

    <!-- Properties -->
    <property name="nss" type="string">
      <column name="NSS" not-null="true" unique="true"/>
    </property>
    <property name="nome" type="string">
      <column name="Nome" not-null="true"/>
    </property>
    <property name="apelido1" type="string">
      <column name="Apelido1" not-null="true"/>
    </property>
    <property name="apelido2" type="string">
      <column name="Apelido2"/>
    </property>
    <property name="datanacemento" type="date">
      <column name="Datanacemento"/>
    </property>
    <property name="parentesco" type="string">
      <column name="Parentesco"/>
    </property>
    <property name="sexo" type="char">
      <column name="Sexo"/>
    </property>

    <!-- References -->
    <many-to-one name="empregado" class="pojos.Empregado"  insert="false" update="false" fetch="select">
      <column name="NSS_Empregado" not-null="true"/>
        
    </many-to-one>
    <!-- Referenced by -->
  </class>
</hibernate-mapping>
        